    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/background/Background.png"/>
        </Grid.Background>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <Line Fill="Gray" Stroke="Gray" X1="5" X2="210" Y1="0" Y2="0" StrokeThickness="1" Margin="0,20,0,0"/>
            <!--     <TextBlock x:Uid="Header" Text="OASIS 2015" Foreground="White" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,5" />-->
            <TextBlock  Text="Profshows" Margin="0,10,0,0"  FontFamily="Assets/fonts/Moon Light.otf#Moon" FontSize="35" Foreground="Gray"
                       TextWrapping="Wrap"
                       Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />
            <Line Fill="Gray" Stroke="Gray" X1="5" X2="210" Y1="0" Y2="0" StrokeThickness="1" Margin="0,0,0,10"/>
        </StackPanel>
        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <ScrollViewer>
                <StackPanel>
                    <!-- <Image Source="Assets/oasis-logo.png" Margin="0,0,0,20" Height="100" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" ></Image>   -->
                    <Border CornerRadius="33">
                    <StackPanel Background="#FFEC3157"  Margin="0,20,0,0">
                        <Image Source="Assets/ppl/abish.png" Height="200" Stretch="Fill"/>
                        <TextBlock  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" Margin="10" Text="Abish Mathew is an Indian Stand Up comedian, actor and musician. Known for his work with All India Bakchod and Son Of Abish!
" TextWrapping="Wrap" FontSize="22" Foreground="Black" FontWeight="Medium"/>
                    </StackPanel>
                    </Border>
                    <StackPanel Background="#FFEC3157" Margin="0,20,0,0" >
                        <Image Source="Assets/ppl/aflatunes.png" Height="200" Stretch="Fill"/>
                        <TextBlock  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" Margin="10" Text="Stay Aflatuned! for beat-boxing and a capella with the eight-member band, Aflatunes.
" TextWrapping="Wrap" FontSize="22" Foreground="Black" FontWeight="Medium"/>
                    </StackPanel>
                    <TextBlock  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" TextWrapping="Wrap" FontSize="28" Foreground="White" FontWeight="Normal"
                        Margin="10,20,0,10">
                        Abish Mathew and Aflatunes will be performing on 27th February, 2016<LineBreak/><LineBreak/>
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
