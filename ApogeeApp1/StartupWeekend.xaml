            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <Line Fill="Gray" Stroke="Gray" X1="5" X2="310" Y1="0" Y2="0" StrokeThickness="1" Margin="0,20,0,0"/>
