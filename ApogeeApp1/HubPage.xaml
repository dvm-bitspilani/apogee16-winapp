    <Page.Resources>
        <SolidColorBrush x:Name="foreg" Color="Black"></SolidColorBrush>
        <SolidColorBrush x:Name="foreg2" Color="Gray"></SolidColorBrush>
        <Style TargetType="TextBlock" x:Key="ContactName">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontFamily" Value="Assets/fonts/LANENAR_.ttf#Lane"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ContactPost">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="ContactNo">
            <Setter Property="Foreground" Value="WhiteSmoke" />

            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="TextBlock" x:Key="ContactEmail">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="TextWrapping" Value="Wrap"/>

            <Setter Property="FontSize" Value="15" />
        </Style>
        <DataTemplate x:Key="HubSectionHeaderTemplate">
            <TextBlock Margin="0,0,0,-9.5" Text="{Binding}" FontSize="40" FontWeight="Light" FontFamily="Segoe UI" Style="{ThemeResource HeaderTextBlockStyle}" Foreground="Gray" />
        </DataTemplate>
        <DataTemplate x:Key="HubSectionHeaderTemplate2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,0,-9.5" Text="{Binding}"  FontSize="40" FontWeight="Light" FontFamily="Segoe UI" Style="{ThemeResource HeaderTextBlockStyle}" Width="280" Foreground="Gray" />

                <Image Source="Assets/icons/Search-36.png" Width="30" Height="40" Margin="40,10,0,0" Tapped="Image_Tapped"/>

            </StackPanel>
        </DataTemplate>

        <!-- Grid-appropriate item template as seen in section 2 -->
        <DataTemplate x:Key="Standardlong200x180TileItemTemplate">
            <Grid Margin="0,0,9.5,9.5" Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}">
                <Image Source="{Binding ImagePath}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" Height="138.5" Width="350"/>
                <TextBlock Text="{Binding Title}" VerticalAlignment="Bottom" Margin="9.5,0,0,6.5" Style="{ThemeResource BaseTextBlockStyle}"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="Standard200x180TileItemTemplate">
            <Grid Margin="0,0,12,12" Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}">
                <Image Source="{Binding ImagePath}" Opacity="0.8" Stretch="Fill" AutomationProperties.Name="{Binding Title}" Height="150" Width="170"/>
                <TextBlock Text="{Binding Title}" Foreground="Black" VerticalAlignment="Bottom" Margin="9.5,0,0,6.5" Style="{ThemeResource BaseTextBlockStyle}"/>
            </Grid>
        </DataTemplate>



        <DataTemplate x:Key="StandardTripleLineItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Margin="0,9.5,0,0" Grid.Column="0" HorizontalAlignment="Left">
                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" Height="79" Width="79"/>
                </Border>
                <StackPanel Grid.Column="1" Margin="14.5,9,0,0">
                    <TextBlock Foreground="WhiteSmoke" FontSize="25"  Text="{Binding Title}" Style="{ThemeResource ListViewItemTextBlockStyle}" FontFamily="Assets/fonts/LANENAR_.ttf#Lane" FontWeight="SemiBold"/>
                    <TextBlock Foreground="White" FontSize="18
                               "  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" Text="{Binding Rules}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" FontStyle="Italic"/>
                    <TextBlock Foreground="White" FontSize="18"  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" Text="{Binding Eligibility}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                    
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="StandardDoubleLineItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Margin="0,9.5,0,0" Grid.Column="0" HorizontalAlignment="Left">
                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}" Height="79" Width="79"/>
                </Border>
                <StackPanel Grid.Column="1" Margin="14.5,14,0,0">
                    <TextBlock Foreground="WhiteSmoke" FontSize="28"  Text="{Binding Title}" Style="{ThemeResource ListViewItemTextBlockStyle}" FontFamily="Assets/fonts/LANENAR_.ttf#Lane" FontWeight="SemiBold"/>
                    <TextBlock Foreground="White" FontSize="20"  FontFamily="Assets/fonts/LANENAR_.ttf#Lane" Text="{Binding Rules}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
